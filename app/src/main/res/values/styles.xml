<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Text style -->
    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/button_primary</item>
    </style>

    <!-- Card styles - parent harus @style/CardView.Light atau theme attr -->
    <style name="Card.Profile" parent="@style/CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="Card.Action" parent="@style/CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Base CardView style - parent harus CardView dari library -->
    <style name="CardView" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Text styles -->
    <style name="Text.Title" parent="@style/Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Text.Subtitle" parent="@style/Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Body" parent="@style/Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="Text.Caption" parent="@style/Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text.Monospace" parent="@style/Text">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
    </style>
</resources>
