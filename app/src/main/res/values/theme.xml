<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PuhBooster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryDark">@color/accent</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/accent_dark</item>

        <!-- Window/Background colors -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="cardViewStyle">@style/CardView</item>

        <!-- Action bar -->
        <item name="actionBarSize">56dp</item>

        <!-- No action bar (sudah di parent NoActionBar) -->
    </style>

    <style name="Theme.PuhBooster.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
